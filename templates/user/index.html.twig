{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href=" {{ asset('css/user-profile.css') }} ">
{% endblock %}

{% block body %}

    <section>
        <h1>{{ user.pseudo }}</h1>
        <h2>
            <span>Ma ludoth√®que</span>
            <a href="{{ path('user_select_games') }}">
                <i class="fa fas fa-plus"></i>
            </a>
        </h2>
        <div class="my-games profiles">
            <i class="carousel-icon-left carousel-icon fa fa-chevron-left"></i>
            {% for game in user.myGames %}
                <a class="game profile" href="{{ path('game_profile_id', {'id': game.id}) }}">
                    <img src="{{ game.photo }}" alt="" class="rounded-circle"/>
                    <span>{{ game.name }}</span>
                </a>
            {% endfor %}
            <i class="carousel-icon-right carousel-icon fa fa-chevron-right"></i>
        </div>

    </section>

    <section>
        <h2>
            <span>Mes hexapotes</span>
            <a href="{{ path('user_select_hexapotes') }}">
                <i class="fa fas fa-plus"></i>
            </a>
        </h2>
        <div class="my-hexapotes profiles">
            <i class="carousel-icon-left carousel-icon fa fa-chevron-left"></i>

                {% for hexapote in user.myHexapotes %}
            <a class="hexapote profile" href="#">
                    {% if hexapote.photo %}
                    <img src="{{ hexapote.photo }}" alt="" class="rounded-circle"/>
                        <span>{{ hexapote.pseudo }}</span>
                    {% else %}
                        <img src="{{ asset('img/icon.png') }}" alt="" class="rounded-circle"/>
                        <span>{{ hexapote.pseudo }}</span>
                    {% endif %}
            </a>
                {% endfor %}

            <i
                    class="carousel-icon-right carousel-icon fa fa-chevron-right"
            ></i>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/carousel.js') }}"></script>
{% endblock %}
