{% extends 'base.html.twig' %}

{% block title %}Ludoth√®que{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href=" {{ asset('css/la-ludotheque.css') }} ">
{% endblock %}

{% block body %}
<div class="container pb-3">
    <h1>Nos jeux</h1>
    <section>
        <button class="form-open">Filtres</button>
        <div id="form-toggle">
            {{ form_start(ludo_form) }}
            {{ form_widget(ludo_form) }}
            <input type="submit" value="Enregistrer">
            {{ form_end(ludo_form) }}
        </div>

    </section>

    <section class="pt-4 row">
        {% for game in games %}
            <div class="col-md-6">
                <div class="card game-card mb-3">
                    <div class="card-body">
                        <div class="row no-gutters">
                            <div class="col-4">
                                <img src="{{ game.photo }}" class="card-img" alt="..."/>
                            </div>
                            <div class="col-8 game-card-content">
                                <h5 class="card-title">{{ game.name }}</h5>
                                <p class="card-text card-text-main">
                                    {% if game.synopsis|length > 500 %}
                                        {{ game.synopsis|slice(0, 500) }}&nbsp;...
                                    {% else %}
                                        {{ game.synopsis }}
                                    {% endif %}

                                </p>
                                <a class="btn btn-primary" href="{{ path('game_profile_id', {'id': game.id}) }}">Voir la
                                    fiche du jeu</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/toggle.js') }}"></script>
        {% endblock %}

